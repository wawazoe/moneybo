<%= render "shared/header" %>

<div class='top-page'>

  <h1>トップページ</h1>
  <%= link_to "#{current_user.nickname}さん", edit_user_registration_path %>の家計簿
  <div class = 'top-content'>
    <div class='money-input'>
      <ul>
        <li><%= link_to "支出を入力する", gives_new_path(current_user.id) %></li>
        <li><%= link_to "支出を編集する", edit_gife_path(current_user.id) %></li>
        <li><%= link_to "収入を入力する", gets_new_path(current_user.id) %></li>
        <li><%= link_to "収入を編集する", edit_get_path(current_user.id) %></li>
      </ul>
    </div>
    <div class = 'money-total' >
      <ul><% @gives.each do |give| %>
      支出
        <li>衣<%= give.clothing_out %>円</li>
        <li>食<%= give.food_out %>円</li>
        <li>住<%= give.live_out %>円</li>
        <li>固定費<%= give.fixed_cost %>円</li>
      </ul>
      <%end%>

      <ul><% @gets.each do |get| %>
      収入
        <li>給料<%= get.salary %>円</li>
      </ul>
      <%end%>
    </div>
      <a><img src="assets/calender_schedule_empty.png" class="top-img" ></a>

    
  </div>
</div>
<%= render "shared/footer" %>